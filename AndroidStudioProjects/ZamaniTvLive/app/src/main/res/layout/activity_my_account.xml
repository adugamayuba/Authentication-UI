<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    tools:context="com.zamani.zamani.MyAccount">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:id="@+id/header"

        android:background="@color/toolbarcolor"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="?android:attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textView9"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="50dp"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:text="MY ACCOUNT" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView10"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="25dp"
                android:text="Name" />

            <TextView
                android:id="@+id/textView1q0"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:text="Abel Ayuba" />


            <TextView
                android:id="@+id/textnasView10"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="25dp"
                android:text="Email Address" />

            <TextView
                android:id="@+id/textViesw1q0"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:text="adugamayuba@gmail.com" />

            <TextView
                android:id="@+id/textView1v"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="25dp"
                android:text="Phone Number" />

            <TextView
                android:id="@+id/textView1q0e"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:text="+2348091774510" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="75dp"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:text="LOGOUT" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>